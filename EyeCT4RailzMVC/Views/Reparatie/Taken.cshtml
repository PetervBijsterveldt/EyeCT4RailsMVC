@model IEnumerable<EyeCT4RailzMVC.Models.ReparatieBeurt>
@{
    ViewBag.Title = "Taken";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Taken</h2>

<table class="table">
    <tr>
        <th>
            Medewerker
        </th>
        <th>
            Tram ID
        </th>
        <th>
            Startdatum
        </th>
        <th>
            Verwachte einddatum
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medewerkernaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TramId)
            </td>
            <td>
                @Html.Encode(item.StartDatumEnTijd.ToShortDateString())
            </td>
            <td>
                @Html.Encode(item.EindDatum.ToShortDateString())
            </td>
            <td>
                @Html.ActionLink("Beëindig", "BeëindigReparatie", new { reparatieid = item.Id }, new { onclick = "return confirm('Is de reparatie afgelopen?');" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Nieuwe reparatie", "AddReparatie")
</p>
