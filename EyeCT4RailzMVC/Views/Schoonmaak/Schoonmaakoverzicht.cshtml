@model IEnumerable<EyeCT4RailzMVC.Models.SchoonmaakBeurt>

@{
    ViewBag.Title = "Schoonmaakoverzicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Schoonmaakoverzicht</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Medewerkernaam
        </th>
        <th>
            Tram ID
        </th>
        <th>
            Startdatum
        </th>
        <th>
            Einddatum
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Medewerkernaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TramId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EindDatum)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
